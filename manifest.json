{
  "manifest_version": 2,

  "name": "SprAy+",
  "description": "Keeps you on track.",
  "version": "0.0",

  "browser_action": {
    "default_icon": "icons/off.png",
    "default_title": "Click here!"
  },

  "background": {
    "scripts": ["javascript/background.js"]
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["javascript/spray.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
